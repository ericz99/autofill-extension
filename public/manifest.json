{
  "manifest_version": 2,
  "name": "AIO Extension",
  "author": "Eric Zhang",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "AIO Extension"
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts" : [
    {
      "matches": ["https://*/*/checkouts/*"],
      "js": ["sites/shopify.js"]
    },
    {
      "matches": ["https://*.shopifycs.com/*"],
      "js": ["sites/shopify-cs.js"],
      "all_frames": true
    }
  ]
}
